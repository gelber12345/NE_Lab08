<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="personal"
            type="com.ne.ne_lab08.model.entidades.Personal" />
        <variable
            name="viewModel"
            type="com.ne.ne_lab08.viewmodel.personal.MainPersonalViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.goToControl(personal.id)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:padding="2dp"
                app:srcCompat="@drawable/icono"
                tools:srcCompat="@drawable/icono" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/viewNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@{personal.nombre}"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtviewdni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="DNI:"
                        android:paddingRight="5dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/viewdni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@{personal.dni}"
                        android:paddingRight="5dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/txtviewfecha"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="F. Nac."
                        android:paddingLeft="3dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/viewDia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="@{personal.diaString}"
                        android:paddingLeft="3dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/txtseparador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / " />
                    <TextView
                        android:id="@+id/viewMes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="@{personal.mesString}"
                        android:paddingLeft="3dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/txtseparador2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / " />
                    <TextView
                        android:id="@+id/viewYear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="@{personal.yearString}"
                        android:paddingLeft="3dp"
                        android:textSize="16sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtviewId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="Codigo: "
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/viewId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="@{personal.idString}"
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/txtviewEstadp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="Estado: "
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/viewEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="@{personal.estado}"
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>